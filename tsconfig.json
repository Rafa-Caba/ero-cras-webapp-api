{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "typeRoots": ["./node_modules/@types", "./src/types"] 
    },
    "include": [
        "src"
, "src/utils/.ts"    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}